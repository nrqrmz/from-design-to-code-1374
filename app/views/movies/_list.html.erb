<div data-controller="movie-card" data-search-movies-target="list">
  <i class="fa-solid fa-square-caret-down fs-1 mb-3" data-action="click->movie-card#revealContent"></i>
  <p class="h3 d-none" data-movie-card-target="content">
    <% if params[:query].blank? %>
      <%= pluralize movies.count, "movie" %> available
    <% else %>
      <%= pluralize movies.count, "result" %> for <code><%= params[:query] %></code>
    <% end %>
  </p>
  <div class="movies">
    <% movies.each do |movie| %>
      <%= render "movie_infos", movie: movie %>
    <% end %>
  </div>
</div>
